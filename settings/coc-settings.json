{
  "languageserver": {
    "ccls": {
      "command": "clangd",
      "args": ["--background-index"],
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": ["compile_commands.json", ".git/", ".root"]
    },

    "digestif": {
      "command": "digestif",
      "filetypes": ["sty", "cls", "bib", "tex", "plaintex", "context"]
    },

    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },

    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": []
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/", ".git"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "coc.source.file.enable": false
}
