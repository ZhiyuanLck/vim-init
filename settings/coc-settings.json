{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": []
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/", ".git"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }

  },
  "coc.source.file.enable": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E121,E123,E126,E226,E24,E704,W503,W504,F403,E501"],
  "python.linting.enabled": false,
  "snippets.loadFromExtensions": false,
}
